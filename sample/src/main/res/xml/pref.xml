<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="rgb"
        android:title="RGB sample"
        android:summary="[color]"
        android:enabled="false"/>

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="argb"
        android:title="ARGB sample"
        android:summary="Example [color]"
        app:chromaColorMode="ARGB"
        app:chromaInitialColor="#00ffff"/>

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="argbhex"
        android:title="ARGB and HEX indicator sample"
        android:summary="[color]"
        app:chromaColorMode="ARGB"
        app:chromaIndicatorMode="HEX"
        app:chromaInitialColor="@color/colorPrimary"/>

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="hsv"
        android:title="HSV sample without summary"
        app:chromaColorMode="HSV"
        app:chromaInitialColor="@color/colorAccent"/>

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="roundedquare"
        android:title="ARGB sample with rounded square sample"
        android:summary="Sample [color] summary"
        app:chromaShapePreview="ROUNDED_SQUARE"
        app:chromaColorMode="ARGB"
        app:chromaInitialColor="#ffee00"/>

    <com.kunzisoft.androidclearchroma.ChromaPreference
        android:key="customsummary"
        android:title="ARGB with square and simple summary"
        android:summary="Sample summary"
        app:chromaShapePreview="SQUARE"
        app:chromaColorMode="ARGB"
        app:chromaInitialColor="#ff0004"/>

</PreferenceScreen>