<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/color_view"
        android:layout_width="@dimen/color_view_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@color/colorBackground"
        android:background="@drawable/color_background"/>

    <LinearLayout
        android:id="@+id/channel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/color_view"
        android:layout_toEndOf="@id/color_view"
        android:orientation="vertical"/>

    <include
        android:id="@+id/button_bar"
        layout="@layout/button_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/color_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</merge>